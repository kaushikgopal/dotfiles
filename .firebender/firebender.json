{
  "rules": [
    {
      "filePathMatches": "*",
      "rulesPaths": "general.mdc"
    },
    {
      "filePathMatches": ["**/*.kt", "**/*.kts"],
      "rulesPaths": "kt.mdc"
    },
    {
      "filePathMatches": ["**/*Test*.kt", "**/*Test*.kts"],
      "rulesPaths": "kt-test.mdc"
    }
  ],
  "ignore": [
    "build/**",
    ".gradle/**"
  ],
  "mcpServers": {},
  "mcpEnvFile": "path/to/env"
}