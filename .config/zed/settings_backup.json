  "cursor_blink": false,
  "hide_mouse": "on_typing_and_movement",
  "relative_line_numbers": "enabled",
  "terminal": {
    "font_size": 12.5,
    "copy_on_select": true,
    "line_height": { "custom": 1.5 },
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false,
  },
  "ui_font_size": 16,
  "vim_mode": true,
  "wrap_guides": [80],
  // --------------------------------- THEME
  // ---- THEME overrides
  "experimental.theme_overrides": {
    "editor.document_highlight.read_background": "#FF46855c", // highlight matching braces
    // "link_text.hover": "#ffd866", // zedokai
    "players": [
      {
        "cursor": "#FF4685",
        "selection": "#FF46855c",
        "background": "#FF468530",
      },
    ],
    "syntax": {
      "link_text": { "font_style": "normal" },
      "link_uri": { "font_style": "italic" },
      "title": { "font_weight": 900 },
    },
  },
  // ----------------------------------- EXTENSIONS
  "auto_install_extensions": {
    "ini": true,
    "fish": true,
    "kotlin": true,
    "zedokai": true,
  },
  // --------------------------------- Language specific instructions
  "languages": {
    "Markdown": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--prose-wrap",
            "always",
            "--stdin-filepath",
            "{buffer_path}",
          ],
        },
      },
    },
    "Kotlin": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "ktfmt",
          "arguments": ["--meta-style", "-"],
        },
      },
    },
    // "Fish": {
    //   "formatter": {
    //     "external": {
    //       "command": "fish_indent"
    //     }
    //   }
    // }
  },
  "file_types": {
    "Rust": ["**/bin/comm*", "**/bin/mdquote", "**/bin/nato"],
    "Ini": [".brewfile"],
  },
  // ------------------------------------- AI Stuff
  "features": {
    // "edit_prediction_provider": "zed"
    "edit_prediction_provider": "copilot",
  },
  "edit_predictions": {
    "disabled_globs": [],
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5",
    },
    "model_parameters": [],
  },
  // ---------- [ACP] terminal-based agents
  "agent_servers": {
    "gemini": {
      "ignore_system_version": false,
    },
    // "codex" is configured via the interface
    "claude": {
      "env": {
        "CLAUDE_CODE_EXECUTABLE": "/opt/homebrew/bin/claude",
      },
    },
  },
  // ---------- LLM Providers
  "language_models": {
    "openai_compatible": {
      // "GATEWAY BEDROCK": {
      //   // "api_url": "https://aigateway.instacart.tools/unified/zed/chat/completions/user/kaushik/v1",
      //   // "api_url": "https://aigateway.instacart.tools/unified/zed/bedrock/user/kaushik/v1", // 404
      //   // "api_url": "https://aigateway.instacart.tools/proxy/zed/bedrock/user/kaushik/v1", // no claude in here
      //   "api_url": "https://aigateway.instacart.tools/unified/zed/user/kaushik/v1", // enum error response
      //   "available_models": [
      //     {
      //       "name": "claude-sonnet-4.5",
      //       "display_name": "ic-sonnet-4.5",
      //       "max_tokens": 200000
      //     }
      //   ]
      // },
      "GATEWAY GPT": {
        "api_url": "https://aigateway.instacart.tools/unified/zed/user/kaushik/v1",
        "available_models": [
          {
            "name": "gpt-5",
            "display_name": "ic-gpt-5",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
          },
        ],
      },
    },
  },
}
