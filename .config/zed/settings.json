// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // // ----------------------------------------
  "buffer_font_family": "Recursive KG",
  "buffer_font_size": 14.5,
  "buffer_font_weight": 450,
  "buffer_line_height": { "custom": 1.55 },
  // // ----------------------------------------
  // "buffer_font_size": 14.5,
  // // "buffer_font_weight": 500,
  // "buffer_font_family": "JetBrains Mono",
  // "buffer_font_features": {
  //   // "cv02": true, // t
  //   "cv03": true, // g
  //   "cv04": true, // j
  //   "cv07": true, // w
  //   // "cv08": true, // Kk
  //   "cv09": true, // f
  //   // "cv17": true, // f (curled top)
  //   "cv10": true, // r
  //   "cv11": true, // y
  //   "cv14": true, // $
  //   "cv15": true, // &
  //   "ss19": true // Broken = ligatures != == === !===
  // },
  // "buffer_line_height": { "custom": 1.55 },
  // // ----------------------------------------
  // "buffer_font_size": 13.5,
  // "buffer_font_weight": 575,
  // "buffer_font_family": "CommitMono-KG",
  // "buffer_line_height": { "custom": 1.5 },
  // // ----------------------------------------
  // "buffer_font_size": 13.5,
  // "buffer_font_weight": 525,
  // "buffer_font_family": "TX-02-Variable",
  // "buffer_font_features": {
  //   "ss02": true, // 0
  //   "ss05": true, // r
  //   "ss06": true, // |
  //   "ss12": true // ligatures -> !=
  // },
  // "buffer_line_height": { "custom": 1.55 },
