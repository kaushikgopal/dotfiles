// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // ---------------------------------
  "buffer_font_family": "CommitMono-KGS",
  "buffer_font_size": 13.5,
  "buffer_font_weight": 550,
  "cursor_blink": false,
  "hide_mouse": "on_typing_and_movement",
  "ui_font_size": 16,
  "vim_mode": true,
  "terminal": {
    "font_family": "CommitMono-KGS",
    "font_weight": 570,
    "font_size": 12,
    "line_height": { "custom": 1.5 }
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "wrap_guides": [80],
  // --------------------------------- Language specific instructions
  "languages": {
    "Markdown": {}
  },
  // --------------------------------- THEME
  "theme": {
    // "mode": "system",
    "mode": "dark",
    "light": "One Light",
    "dark": "Ayu Mirage"
  },
  // ---- THEME overrides
  "experimental.theme_overrides": {
    "players": [{ "cursor": "#FF4685" }],
    "syntax": {
      "title": {
        "color": "#FF4685",
        "font_weight": 700
      }
    }
  }
}
