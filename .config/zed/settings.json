// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // ---------------------------------
  "buffer_font_family": "CommitMono-KG",
  "buffer_font_size": 13,
  "buffer_font_weight": 550,
  "buffer_line_height": { "custom": 1.55 },
  "cursor_blink": false,
  "hide_mouse": "on_typing_and_movement",
  "project_panel": { "entry_spacing": "standard" },
  "relative_line_numbers": true,
  "terminal": {
    "font_family": "CommitMono-KG",
    "font_weight": 575,
    "font_size": 12,
    "line_height": { "custom": 1.5 },
    "copy_on_select": true
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "ui_font_size": 16,
  "vim_mode": true,
  "wrap_guides": [80],
  // --------------------------------- THEME
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Everforest Dark Hard"
    // "dark": "Zedokai Darker (Filter Machine)"
  },
  // ---- THEME overrides
  "experimental.theme_overrides": {
    // "link_text.hover": "#ffd866", // zedokai
    "players": [
      {
        "cursor": "#FF4685",
        "selection": "#FF46855c",
        "background": "#FF468530"
      }
    ],
    "syntax": {
      "link_text": { "font_style": "normal" },
      "link_uri": { "font_style": "italic" }
    }
  },
  // ----------------------------------- EXTENSIONS
  "auto_install_extensions": {
    "ini": true,
    "fish": true,
    "kotlin": true
  },
  // --------------------------------- Language specific instructions
  "languages": {
    "Markdown": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--prose-wrap",
            "always",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    }
    // "Fish": {
    //   "formatter": {
    //     "external": {
    //       "command": "fish_indent"
    //     }
    //   }
    // }
  },
  "file_types": {
    "Rust": ["**/bin/comm*", "**/bin/mdquote", "**/bin/nato"]
  },
  // ------------------------------------- AI Stuff
  "agent": {
    "default_model": {
      "provider": "GATEWAY GPT",
      "model": "gpt-5"
    },
    "model_parameters": []
  },
  // ---------- Edit prediction (autocomplete)
  "features": {
    // "edit_prediction_provider": "zed"
    "edit_prediction_provider": "copilot"
  },
  "edit_predictions": {
    "disabled_globs": []
  },
  // ---------- [ACP] terminal-based agents
  "agent_servers": {
    "gemini": {
      "ignore_system_version": false
    },
    // "codex" is configured via the interface
    "claude": {
      "env": {
        "CLAUDE_CODE_EXECUTABLE": "/opt/homebrew/bin/claude"
      }
    }
  }
}
