// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // --------
  // "buffer_font_family": "Recursive KG",
  // "buffer_font_size": 13,
  // "buffer_font_weight": 375,
  // "buffer_line_height": { "custom": 1.6 },
  // --------
  "buffer_font_size": 13,
  "buffer_font_weight": 375,
  "buffer_font_family": "TX-02-Variable",
  "buffer_font_features": {
    "ss02": true, // 0
    "ss05": true, // r
    "ss06": true, // |
    "ss12": true // ligatures -> !=
  },
  // --------
  // "buffer_font_size": 13.5,
  // "buffer_font_family": "JetBrains Mono",
  // "buffer_font_weight": 450,
  // "buffer_font_features": {
  //   // "cv01": true, // l (classic)
  //   // "cv05": true, // curled l
  //   // "cv02": true, // t
  //   // "cv03": true, // g
  //   // "cv04": true, // j
  //   // "cv06": true, // m
  //   // "cv07": true, // w
  //   // "cv08": true, // Kk (classic)
  //   // "cv09": true, // f  (classic)
  //   // "cv17": true, // f (curled top)
  //   // "cv11": true, // y  (classic)
  //   // "cv12": true, // u (classic)
  //   // "cv14": true, // $
  //   // "cv15": true, // &
  //   // "cv16": true, // Q
  //   // "cv18": true, // 269
  //   // "cv19": true, // 8
  //   // "cv20": true, // 5
  //   // "ss19": true // Broken = ligatures != == === !===
  //   // "ss20": true, // raised bar f
  //   "cv10": true // r  (classic)
  // },
  // // "buffer_line_height": { "custom": 1.55 },
  // --------
  // "buffer_font_size": 14,
  // "buffer_font_weight": 575,
  // "buffer_font_family": "CommitMono-KG",
  // // "buffer_line_height": { "custom": 1.5 },
  // --------
  "cursor_blink": false,
  "hide_mouse": "on_typing_and_movement",
  "relative_line_numbers": "enabled",
  "terminal": {
    "font_size": 12.5,
    "copy_on_select": true,
    "line_height": { "custom": 1.5 }
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "ui_font_size": 16,
  "vim_mode": true,
  "wrap_guides": [80],
  // --------------------------------- THEME
  "theme": {
    "mode": "system",
    "light": "One Dark",
    "dark": "One Dark"
  },
  // ---- THEME overrides
  "experimental.theme_overrides": {
    "editor.document_highlight.read_background": "#FF46855c", // highlight matching braces
    // "link_text.hover": "#ffd866", // zedokai
    "players": [
      {
        "cursor": "#FF4685",
        "selection": "#FF46855c",
        "background": "#FF468530"
      }
    ],
    "syntax": {
      "link_text": { "font_style": "normal" },
      "link_uri": { "font_style": "italic" },
      "title": { "font_weight": 900 }
    }
  },
  // ----------------------------------- EXTENSIONS
  "auto_install_extensions": {
    "ini": true,
    "fish": true,
    "kotlin": true,
    "zedokai": true
  },
  // --------------------------------- Language specific instructions
  "languages": {
    "Markdown": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": [
            "--prose-wrap",
            "always",
            "--stdin-filepath",
            "{buffer_path}"
          ]
        }
      }
    },
    "Kotlin": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "ktfmt",
          "arguments": ["--meta-style", "-"]
        }
      }
    }
    // "Fish": {
    //   "formatter": {
    //     "external": {
    //       "command": "fish_indent"
    //     }
    //   }
    // }
  },
  "file_types": {
    "Rust": ["**/bin/comm*", "**/bin/mdquote", "**/bin/nato"],
    "Ini": [".brewfile"]
  }
}
